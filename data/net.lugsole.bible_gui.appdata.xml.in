<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>@APPLICATION_ID@.desktop</id>
  <metadata_license>FSFAP</metadata_license>
  <project_license>MIT</project_license>
  <content_rating type="oars-1.0" />
  <name>Bible@application_name_suffix@</name>
  <summary>Bible app that supports multiple translations</summary>
  <screenshots>
    <screenshot type="default">
      <caption>Bible app on the Chapter selection sccreen</caption>
      <image>http://flatpak.lugsole.net/bible_chapter.png</image>
    </screenshot>
  </screenshots>
  <description>
    <p>
      This is a basic bible app that supports many different translations
    </p>
    <p>
      This app supports multple different bible file formats.
    </p>
    <ul>
      <li>SoftProjector - spb</li>
      <li>MyBible - SQLite3</li>
      <li>tsv</li>
      <li>Zefania XML bible - xml</li>
    </ul>
  </description>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>
  <keywords>
      <keyword translate="no">Bible</keyword>
      <keyword translate="no">Bibles</keyword>
      <keyword translate="no">Linux</keyword>
      <keyword translate="no">Book</keyword>
  </keywords>
  <launchable type="desktop-id">net.lugsole.bible_gui.desktop</launchable>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <branding>
      <color type="primary" scheme_preference="light">#799dff</color>
      <color type="primary" scheme_preference="dark">#1757e2</color>
  </branding>
  <url type="homepage">https://lugsole.net</url>
  <developer id="net.lugsole.bible_gui">
      <name>Lugsole</name>
  </developer>
  <releases>
    <release version="0.1.4" date="2024-05-28">
      <description>
        <ul>
          <li>Updated settings screen</li>
          <li>sqlite can now render like a normal Bible</li>
        </ul>
      </description>
    </release>
    <release version="0.1.3" date="2021-12-30">
      <description>
        <ul>
          <li>Replaced GTK3 with GTK4, replaced libhandy with libadwaita</li>
          <li>Fixed search</li>
          <li>Added intagration to system media player.</li>
        </ul>
      </description>
    </release>
    <release version="0.1.2" date="2020-09-26">
      <description>
        <ul>
          <li>Added supports Zefania XML based bible files.</li>
          <li>New Bible translation file importer.</li>
        </ul>
      </description>
    </release>
    <release version="0.1.1" date="2020-08-10"/>
    <release version="0.1.0" date="2020-05-09"/>
  </releases>
</component>

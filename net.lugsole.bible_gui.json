{
    "app-id" : "net.lugsole.bible_gui",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "command" : "bible",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--own-name=org.mpris.MediaPlayer2.Bible"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "espeak",
            "no-parallel-make" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/espeak-ng/espeak-ng",
                    "commit" : "a25849e4d54a23ae1294b129d5696ca7e144ec8b"
                }
            ]
        },
        {
            "name" : "bible",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/Lugsole/net.lugsole.bible_gui"
                }
            ]
        }
    ]
}

{
    "app-id" : "net.lugsole.bible_gui",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.38",
    "sdk" : "org.gnome.Sdk",
    "command" : "bible",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libhandy",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Dglade_catalog=disabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libhandy.git",
                    "commit":"94313c206258860b2428712e7ece1d02c5177857"
                }
            ]
        },
        {
            "name": "espeak",
	    "no-parallel-make": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/espeak-ng/espeak-ng",
                    "commit": "ec7ebfb3c6767edc7575113562eac72e6d348732"
                }
            ]
        },
        {
            "name": "bible",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Lugsole/net.lugsole.bible_gui",
                    "commit": "f174572fb84bdbd68e9d39d360087538de9a0939"
                }
            ]
        }
    ]
}
